<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context=".MainActivity">

	<androidx.constraintlayout.widget.ConstraintLayout
		android:id="@+id/ctl_main"
		android:layout_width="match_parent"
		android:layout_height="match_parent">


		<Button
			android:id="@+id/btn_go_anim"
			android:layout_margin="5dp"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			app:layout_constraintTop_toBottomOf="@+id/ctl_main"
			app:layout_constraintBottom_toTopOf="parent"
			android:text="Aimation"
			android:textSize="20dp" />

		<Button
			android:id="@+id/btn_go_listview"
			android:layout_margin="5dp"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			app:layout_constraintTop_toBottomOf="@+id/btn_go_anim"
			android:text="ListView"
			android:textSize="20dp" />

		<Button
			android:id="@+id/btn_go_viewpager"
			android:layout_margin="5dp"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			app:layout_constraintTop_toBottomOf="@+id/btn_go_listview"
			android:text="ViewPager"
			android:textSize="20dp" />


		<Button
			android:id="@+id/btn_go_vertical"
			android:layout_margin="5dp"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			app:layout_constraintTop_toBottomOf="@+id/btn_go_viewpager"
			android:text="VerticalViewPager"
			android:textSize="20dp" />

		<Button
			android:id="@+id/btn_go_grammer"
			android:layout_margin="5dp"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			app:layout_constraintTop_toBottomOf="@+id/btn_go_vertical"
			android:text="Grammer"
			android:textSize="20dp" />

		<Button
			android:id="@+id/btn_go_inflearn"
			android:layout_margin="5dp"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			app:layout_constraintTop_toBottomOf="@+id/btn_go_grammer"
			android:text="InfLearn"
			android:textSize="20dp" />


	</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>