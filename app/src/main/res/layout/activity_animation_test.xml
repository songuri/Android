<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context=".testpage.AnimationTestActivity">


	<TextView
		android:id="@+id/headertitle"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="Your Progress"
		android:textColor="@color/blue"
		android:textSize="24sp"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintRight_toRightOf="parent"
		app:layout_constraintTop_toTopOf="parent"
		android:layout_marginTop="50dp"/>

	<TextView
		android:id="@+id/subtitle"
		android:textAlignment="center"
		android:layout_width="250dp"
		android:layout_height="wrap_content"
		android:text="It will help you to study harder everyday you liked to"
		android:textColor="@color/gray"
		android:textSize="16sp"
		android:lineSpacingExtra="4dp"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintRight_toRightOf="parent"
		android:layout_marginTop="14dp"
		app:layout_constraintTop_toBottomOf="@+id/headertitle"/>

	<ImageView
		android:id="@+id/ic_cards"
		android:src="@drawable/ic_launcher_foreground"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="50dp"
		app:layout_constraintTop_toBottomOf="@+id/subtitle"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"/>
	<LinearLayout
		android:id="@+id/parent_result"
		android:weightSum="3"
		android:orientation="horizontal"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="50dp"
		android:layout_marginEnd="20dp"
		android:layout_marginStart="20dp"
		app:layout_constraintTop_toBottomOf="@+id/ic_cards">

		<LinearLayout
			android:orientation="vertical"
			android:layout_weight="1"
			android:layout_width="0dp"
			android:layout_height="wrap_content">


			<LinearLayout
				android:id="@+id/resultOne"
				android:gravity="center"
				android:layout_marginStart="10dp"
				android:layout_marginEnd="10dp"
				android:orientation="vertical"
				android:layout_width="match_parent"
				android:layout_height="120dp">

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="23"
					android:textAlignment="center"
					android:textColor="@color/blue"
					android:textSize="24sp"/>

				<TextView
					android:textAlignment="center"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="BABO"
					android:textColor="@color/blue2"
					android:textSize="16sp"/>


			</LinearLayout>


		</LinearLayout>

		<LinearLayout
			android:orientation="vertical"
			android:layout_weight="1"
			android:layout_width="0dp"
			android:layout_height="wrap_content">


			<LinearLayout
				android:id="@+id/resultTwo"
				android:gravity="center"
				android:layout_marginStart="10dp"
				android:layout_marginEnd="10dp"
				android:orientation="vertical"
				android:layout_width="match_parent"
				android:layout_height="120dp">

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="12"
					android:textAlignment="center"
					android:textColor="@color/blue"
					android:textSize="24sp"/>

				<TextView
					android:textAlignment="center"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="DDONG"
					android:textColor="@color/blue2"
					android:textSize="16sp"/>


			</LinearLayout>


		</LinearLayout>

		<LinearLayout
			android:orientation="vertical"
			android:layout_weight="1"
			android:layout_width="0dp"
			android:layout_height="wrap_content">


			<LinearLayout
				android:id="@+id/resultThree"
				android:gravity="center"
				android:layout_marginStart="10dp"
				android:layout_marginEnd="10dp"
				android:orientation="vertical"
				android:layout_width="match_parent"
				android:layout_height="120dp">

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="5"
					android:textAlignment="center"
					android:textColor="@color/blue"
					android:textSize="24sp"/>

				<TextView
					android:textAlignment="center"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="DOG"
					android:textColor="@color/blue2"
					android:textSize="16sp"/>


			</LinearLayout>


		</LinearLayout>

	</LinearLayout>


	<Button
		android:id="@+id/btn_next_course"
		style="@style/Widget.AppCompat.Button.Borderless"
		android:background="@color/gray"
		android:textColor="#FFF"
		android:textSize="18sp"
		android:textAllCaps="false"
		android:text="Next Course"
		android:layout_width="match_parent"
		android:layout_height="50dp"
		android:layout_marginEnd="56dp"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		android:layout_marginStart="56dp"
		android:layout_marginTop="50dp"
		app:layout_constraintTop_toBottomOf="@+id/parent_result"/>

</androidx.constraintlayout.widget.ConstraintLayout>
